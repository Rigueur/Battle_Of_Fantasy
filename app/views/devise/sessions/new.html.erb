<div class="d-flex align-items-center" style="backdrop-filter: blur(5px); width: 100vw; height: 100vh;">
  <div class="form-signin w-25 m-auto">
    <h2 style="font-family: 'Mate SC'; color: #D9C7BD; font-size: 25px; text-align: center; color: white;">Sign In</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs" style="color: #D9C7BD">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
        label: "Password:",
                    required: false,
                    input_html: { autocomplete: "mot de passe" } %>
        <%= f.input :remember_me,
        label: "Remember me",
        as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: 'btn-primary w-100 py-2 mb-2' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
