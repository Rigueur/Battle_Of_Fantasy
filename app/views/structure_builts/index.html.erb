<div class="conteneur-bleu" style="background-image: url('<%= image_path ('box-blue')%>'); background-size: cover;">
  <div class="conteneur-grille">
    <% structure = @town.structures.find_by(name: "Fields") %>
	  <div class="boite boite-1" style="--img: url('<%= image_path ('fields')%>');">
      <div class="details">
        <h2><strong><%= structure.name %> - Level <%= structure.level %></strong></h2>
        <p><strong>Production: -</strong> <i class="fa-solid fa-burger fa-lg" style="color: brown"></i> <%= structure.food_production %>/min</p>
        <p><strong>Requirements -</strong> <i class="fa-solid fa-tree fa-lg" style="color:green"></i> <%= structure.wood_cost %>  <i class="fa-solid fa-gem fa-lg" style="color: grey"></i> <%= structure.stone_cost %> <i class="fa-solid fa-coins fa-lg" style="color: yellow"></i> <%= structure.gold_cost %></p>
        <div class="d-flex justify-content-center align-items-center w-100">
          <% structure_built = StructureBuilt.find_by(structure_id: structure.id, town_id: @town.id) %>
          <%= link_to towns_structure_update_path(@town.id, structure_built.id), data:{ turbo_method: "patch"}, class: "text-decoration-none" do %>
            <button class="btn btn-primary w-50"><strong>Upgrade</strong><br><i class="fa-solid fa-clock" style="color: orange"></i> <%= structure.upgrade_time %> min</button>
          <% end %>
        </div>
      </div>
    </div>
