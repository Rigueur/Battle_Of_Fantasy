
<div class="conteneur" data-controller="displaymenu" data-action="click->displaymenu#remove">
  <%= image_tag 'logo.png',  alt: "", id: "logo"%>
  <div class="avatar-icon" style="background-image: url('<%= asset_path (current_user.avatar_url) %>'); background-size: cover;">
    <%= image_tag 'avatar-border.png', alt: "", id: "avatar-border"%>
    <div class="profile-card d-flex flex-column justify-content-end align-items-end">
      <div class="user-infos d-flex flex-column">
        <div class="d-flex flex-row justify-content-evenly align-items-center h-50">
          <i class="fa-solid fa-user fa-lg" style="color: #382C3D;"></i><h2 style="font-size: 1.2em; margin: 0;"><strong><%=current_user.nickname%></strong></h2>
        </div>
        <div class="d-flex flex-row justify-content-evenly align-items-center h-50 border-0">
          <p style="font-size: 1.2em; margin: 0;">Lv.<%=current_user.level%></p>
          <p style="font-size: 1.2em; margin: 0;">Exp.<%=current_user.experience%>/<%=current_user.level * 20 + 80%></p>
        </div>
      </div>
    </div>
  </div>

  <div class="town-icon">
    <%= image_tag 'town-icon.png' %>
  </div>

  <div class="icons-menu-left">
    <div class="facilities-icon" data-action="click->displaymenu#display" data-displaymenu-target="icon">
      <%= image_tag 'facilities-icon.png', alt: "", class: "hover-image"%>
      <div class="facilities-menu d-flex flex-column justify-content-evenly align-items-center" data-displaymenu-target="menu">
        <%= link_to towns_structures_path(@town), class: "text-decoration-none" do %>
          <div class="structures-icon d-flex justify-content-between align-items-center">
            <%= image_tag 'structures-icon.png', alt: "", id: "s-icon"%>
            <% if @town.construction_ongoing %>
              <div class="d-flex flex-column justify-content-evenly align-items-center">
                <h3> Buildings</h3>
                <div data-controller="countdownstructure" data-countdownstructure-end-time-value="<%= @town.construction_end_time.to_i %>" data-countdownstructure-town-id-value="<%= @town.id %>">
                  <p class="m-0 text-primary" style="font-size: 90%;" data-countdownstructure-target="countdownstructure"></p>
                </div>
              </div>
            <% else %>
              <h3> Buildings</h3>
            <% end %>
          </div>
        <% end %>
        <%= link_to towns_researches_path(@town), class: "text-decoration-none" do %>
          <div class="researches-icon d-flex justify-content-between align-items-center">
            <%= image_tag 'researches-icon.png', alt: "", id: "r-icon"%>
            <% if @town.research_ongoing %>
              <div class="d-flex flex-column justify-content-evenly align-items-center">
                <h3> Research</h3>
                <div data-controller="countdownresearch" data-countdownresearch-end-time-value="<%= @town.research_end_time.to_i %>" data-countdownresearch-town-id-value="<%= @town.id %>">
                  <p class="m-0 text-primary" style="font-size: 90%;" data-countdownresearch-target="countdownresearch"></p>
                </div>
              </div>
            <% else %>
              <h3> Research</h3>
            <% end %>
          </div>
        <% end %>
        <%= link_to towns_defenses_path(@town), class: "text-decoration-none" do %>
          <div class="defenses-icon d-flex justify-content-between align-items-center">
            <%= image_tag 'defenses-icon.png', alt: "", id: "d-icon" %>
            <% if @town.defense_ongoing %>
              <div class="d-flex flex-column justify-content-evenly align-items-center">
                <h3> Defenses</h3>
                <div data-controller="countdowndefense" data-countdowndefense-end-time-value="<%= @town.defense_end_time.to_i %>" data-countdowndefense-town-id-value="<%= @town.id %>">
                  <p class="m-0 text-primary" style="font-size: 90%;" data-countdowndefense-target="countdowndefense"></p>
                </div>
              </div>
            <% else %>
              <h3> Defenses</h3>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <%= link_to town_units_path(@town), class: "text-decoration-none" do %>
      <div class="units-icon">
        <%= image_tag 'units-icon.png', alt: "" %>
      </div>
    <% end %>
    <%= link_to new_town_battle_path(@town), class: "text-decoration-none z-1" do %>
      <div class="battle-icon">
        <%= image_tag 'battle-icon.png', alt: "" %>
      </div>
    <% end %>
  </div>



  <div class="icons-menu-right">
<%= link_to chatroom_path(@chatroom), class: "text-decoration-none z-1" do %>
  <div class="facilities-icon">
    <%= image_tag 'messages-icon.png', alt: "", class: "hover-image" %>
  </div>
<% end %>
    <div class="units-icon">
      <%= image_tag 'friends-icon.png', alt: "" %>
    </div>
    <div class="battle-icon">
      <%= image_tag 'settings-icon.png', alt: "" %>
    </div>
  </div>

    <%# <div class="facilities-menu">
    </div> %>

  <div class="character-container">
    <%= image_tag 'user-character.png', alt: "" %>
  </div>

</div>
